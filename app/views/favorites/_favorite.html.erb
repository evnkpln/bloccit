<div class="media">
    <div class="media-body">
        <div class="col-md-2">
            <div class="gravatar">
                <% avatar_url = favorite.post.user.avatar_url(48) %>
                <% if avatar_url %>
                    <div class="media-left">
                        <%= image_tag avatar_url, class: 'media-object' %>
                    </div>
                <% end %>
            </div>
            <div class="points text-center">
                <b><%= favorite.post.points %></b>
            </div>
        </div>
        <div class="col-md-10">
            <h4 class="media-heading">
                <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite.post) %>
            </h4>
            <small>
                submitted <%= time_ago_in_words(favorite.post.created_at) %> ago by <%= favorite.post.user.name %> <br>
                <%= favorite.post.comments.count %> Comments
            </small>
        </div>
    </div>
</div>