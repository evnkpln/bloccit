<h1><%= @sPost.title %></h1>

<div class="row">
    <div class="col-md-8">
        <p><%= @sPost.body %></p>
        <small>Yours now for only <b>$<%= @sPost.price %>!</b></small>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_topic_sponsored_post_path(@sPost.topic, @sPost), class: 'btn btn-success' %>
        <%= link_to "Delete Post", [@sPost.topic, @sPost], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'}%>
    </div>
</div>
